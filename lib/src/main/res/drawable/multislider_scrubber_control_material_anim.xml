<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
                   android:constantSize="true">
    <item
        android:state_enabled="false"
        android:state_pressed="true">
        <bitmap
            android:alpha="?android:attr/disabledAlpha"
            android:gravity="center"
            android:src="@drawable/multislider_scrubber_control_off_mtrl_alpha"
            android:tint="?attr/colorControlActivated"/>
    </item>
    <item android:state_enabled="false">
        <bitmap
            android:alpha="?android:attr/disabledAlpha"
            android:gravity="center"
            android:src="@drawable/multislider_scrubber_control_off_mtrl_alpha"
            android:tint="?attr/colorControlNormal"/>
    </item>
    <item
        android:id="@+id/pressed"
        android:state_pressed="true">
        <bitmap
            android:gravity="center"
            android:src="@drawable/multislider_scrubber_control_to_pressed_mtrl_005"
            android:tint="?attr/colorControlActivated"/>
    </item>
    <item android:id="@+id/not_pressed">
        <bitmap
            android:gravity="center"
            android:src="@drawable/multislider_scrubber_control_to_pressed_mtrl_000"
            android:tint="?attr/colorControlActivated"/>
    </item>
    <transition
        android:fromId="@+id/not_pressed"
        android:toId="@+id/pressed">
        <animation-list>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_to_pressed_mtrl_000"
                    android:tint="?attr/colorControlActivated"/>
            </item>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_to_pressed_mtrl_001"
                    android:tint="?attr/colorControlActivated"/>
            </item>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_to_pressed_mtrl_002"
                    android:tint="?attr/colorControlActivated"/>
            </item>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_to_pressed_mtrl_003"
                    android:tint="?attr/colorControlActivated"/>
            </item>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_to_pressed_mtrl_004"
                    android:tint="?attr/colorControlActivated"/>
            </item>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_to_pressed_mtrl_005"
                    android:tint="?attr/colorControlActivated"/>
            </item>
        </animation-list>
    </transition>
    <transition
        android:fromId="@+id/pressed"
        android:toId="@+id/not_pressed">
        <animation-list>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_from_pressed_mtrl_000"
                    android:tint="?attr/colorControlActivated"/>
            </item>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_from_pressed_mtrl_001"
                    android:tint="?attr/colorControlActivated"/>
            </item>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_from_pressed_mtrl_002"
                    android:tint="?attr/colorControlActivated"/>
            </item>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_from_pressed_mtrl_003"
                    android:tint="?attr/colorControlActivated"/>
            </item>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_from_pressed_mtrl_004"
                    android:tint="?attr/colorControlActivated"/>
            </item>
            <item android:duration="15">
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/multislider_scrubber_control_from_pressed_mtrl_005"
                    android:tint="?attr/colorControlActivated"/>
            </item>
        </animation-list>
    </transition>
</animated-selector>